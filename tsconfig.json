{
  "compilerOptions": {
    "baseUrl": ".",
    "module": "ESNext",
    "paths": {},
    "types": ["node"],
    "target": "es2017",
    "lib": ["esnext"],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "outDir": "dist",
    "strictNullChecks": true,
    "resolveJsonModule": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*", "types/*"],
  "extensions": [".ts", ".tsx", ".js", ".jsx"]
}
