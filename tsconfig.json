{
  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": "./src",
    "module": "ESNext",
    "paths": {
      "##/*": ["./src/*"]
    },
    "target": "esnext",
    "lib": ["esnext"],
    "types": ["node"],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "outDir": "dist",
    "strictNullChecks": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "removeComments": true,
    "allowImportingTsExtensions": true,
    "noImplicitAny": false
  },
  "include": ["src/**/*", "types/*"],
  "exclude": ["node_modules/**"],
  "extensions": [".ts", ".tsx", ".js", ".jsx"],
  "ts-node": {
    "esm": true,
    "files": true
  }
}
